---
import { ShimmerButton } from "@/components/ui/shimmer-button"
import { AnimatedGradientText } from "@/components/ui/animated-gradient-text"
import { Particles } from "@/components/ui/particles"
import HeroVisual from "@/components/HeroVisual"
import { useTranslations, getCvPath, type Lang } from "@/i18n"

interface Props {
  lang?: Lang
}

const { lang = "en" } = Astro.props
const t = useTranslations(lang)
const cvUrl = getCvPath(lang)
---

<div class="relative">
  <!-- Particles background -->
  <Particles
    client:visible
    className="absolute inset-0 -z-10"
    quantity={40}
    staticity={60}
    size={0.5}
    color="#5eead4"
  />

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
    <!-- Left: text content -->
    <div>
      <div class="hero-fade" style="--delay: 0s">
        <AnimatedGradientText client:idle className="mb-4 !mx-0">
          <span class="relative flex h-1.5 w-1.5 mr-1.5">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
            <span class="relative inline-flex rounded-full h-1.5 w-1.5 bg-primary"></span>
          </span>
          <span class="text-xs font-medium text-foreground/80">
            {t("hero.badge")}
          </span>
        </AnimatedGradientText>
      </div>

      <h1 class="hero-fade text-5xl sm:text-6xl lg:text-7xl font-bold tracking-tight text-foreground leading-[1.1]" style="--delay: 0.1s">
        Miguel<br />Fern&aacute;ndez
      </h1>

      <p class="hero-fade mt-5 text-xl sm:text-2xl text-muted-foreground font-light leading-relaxed max-w-xl" style="--delay: 0.2s">
        {t("hero.subtitle")}
      </p>

      <p class="hero-fade mt-3 text-sm text-muted-foreground/70 max-w-lg" style="--delay: 0.3s">
        {t("hero.description")}
      </p>

      <div class="hero-fade flex items-center gap-3 mt-6 flex-wrap" style="--delay: 0.4s">
        <a href="mailto:miguel@miguelfernandez.dev">
          <ShimmerButton
            client:idle
            shimmerColor="hsl(180 50% 70%)"
            background="oklch(0.72 0.12 180)"
            borderRadius="8px"
            shimmerSize="0.05em"
            className="h-7 px-3 text-sm font-medium text-white"
          >
            {t("hero.cta")}
          </ShimmerButton>
        </a>
        <a
          href={cvUrl}
          download
          class="inline-flex items-center justify-center gap-1.5 whitespace-nowrap rounded-md text-sm font-medium transition-all h-7 px-2.5 border bg-background shadow-xs hover:bg-accent hover:text-accent-foreground dark:bg-input/30 dark:border-input dark:hover:bg-input/50 [&_svg]:pointer-events-none [&_svg]:shrink-0"
        >
          <svg class="size-4" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M14 3v4a1 1 0 0 0 1 1h4" />
            <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z" />
            <path d="M12 17v-6" />
            <path d="M9.5 14.5l2.5 2.5l2.5 -2.5" />
          </svg>
          {t("hero.cv")}
        </a>
        <a
          href="https://github.com/miguelfdezc"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center gap-1.5 whitespace-nowrap rounded-md text-sm font-medium transition-all h-7 px-2.5 text-muted-foreground hover:bg-accent hover:text-accent-foreground dark:hover:bg-accent/50 [&_svg]:pointer-events-none [&_svg]:shrink-0"
        >
          <svg class="size-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
          </svg>
          GitHub
        </a>
        <a
          href="https://www.linkedin.com/in/miguelfernandezdev/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center gap-1.5 whitespace-nowrap rounded-md text-sm font-medium transition-all h-7 px-2.5 text-muted-foreground hover:bg-accent hover:text-accent-foreground dark:hover:bg-accent/50 [&_svg]:pointer-events-none [&_svg]:shrink-0"
        >
          <svg class="size-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
          </svg>
          LinkedIn
        </a>
      </div>
    </div>

    <!-- Right: orbiting tech icons (hidden on mobile) -->
    <div class="hidden lg:flex items-center justify-center">
      <HeroVisual client:media="(min-width: 1024px)" />
    </div>
  </div>
</div>

<style>
  .hero-fade {
    animation: hero-fade-in 0.5s ease-out both;
    animation-delay: var(--delay, 0s);
  }

  @keyframes hero-fade-in {
    from {
      opacity: 0;
      transform: translateY(16px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-fade {
      animation: none;
    }
  }
</style>
