---
interface Props {
  href: string
}

const { href } = Astro.props
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="inline-flex items-center gap-1.5 text-sm px-3 py-1.5 rounded-lg border border-gray-700 text-gray-300 hover:text-accent-300 hover:border-accent-700 hover:bg-accent-950/50 transition"
>
  <slot />
</a>
