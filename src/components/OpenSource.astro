---
import type { Lang } from "@/i18n"

interface Props {
  lang?: Lang
}

const { lang = "en" } = Astro.props

const ossContributions = [
  { name: "Vitest", desc: lang === "es" ? "Traducción al español (iniciativa propia)" : "Spanish translation (own initiative)", url: "https://github.com/miguelfdezc/vitest-docs-es" },
  { name: "React", desc: lang === "es" ? "Traducción de la documentación" : "Docs translation", url: "https://github.com/reactjs/es.react.dev" },
  { name: "Vite", desc: lang === "es" ? "Traducción de la documentación" : "Docs translation", url: "https://github.com/miguelfdezc/vitejs-docs-es" },
  { name: "MDN Web Docs", desc: lang === "es" ? "Contenido traducido" : "Translated content", url: "https://github.com/mdn/translated-content" },
  { name: "Astro", desc: lang === "es" ? "Contribuciones a la documentación" : "Docs contributions", url: "https://github.com/withastro/docs" },
]

const directories = [
  { name: "Indie Course List", desc: lang === "es" ? "Cursos para indie hackers" : "Courses for indie hackers", url: "https://indiecourselist.com" },
  { name: "Next.js Landings", desc: lang === "es" ? "Templates y recursos Next.js" : "Next.js templates & resources", url: "https://nextjslandings.com" },
  { name: "Productized Agencies", desc: lang === "es" ? "Directorio de agencias productizadas" : "Productized agencies directory", url: "https://productizedagencies.com" },
  { name: "Vercel Alternatives", desc: lang === "es" ? "Alternativas de hosting a Vercel" : "Vercel hosting alternatives", url: "https://vercelalternatives.com" },
  { name: "Lead Generator List", desc: lang === "es" ? "Herramientas de generación de leads" : "Lead generation tools", url: "https://leadgeneratorlist.com" },
]
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
  <div class="rounded-xl border border-border/50 border-t-primary/30 bg-card/50 backdrop-blur-sm p-5">
    <h3 class="text-sm font-semibold text-foreground mb-3 flex items-center gap-2">
      <svg class="size-4 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/>
        <path d="M9 18c-4.51 2-5-2-7-2"/>
      </svg>
      {lang === "es" ? "Open Source" : "Open Source"}
    </h3>
    <ul class="space-y-2">
      {ossContributions.map((item) => (
        <li>
          <a href={item.url} target="_blank" rel="noopener noreferrer" class="group inline-flex items-center gap-2 text-sm">
            <span class="font-medium text-primary group-hover:text-primary/80 transition-colors">{item.name}</span>
            <span class="text-muted-foreground text-xs">— {item.desc}</span>
            <svg class="size-3 text-muted-foreground/50 group-hover:text-primary transition-colors shrink-0" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M12 6h-6a2 2 0 0 0 -2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-6" />
              <path d="M11 13l9 -9" />
              <path d="M15 4h5v5" />
            </svg>
          </a>
        </li>
      ))}
    </ul>
  </div>

  <div class="rounded-xl border border-border/50 border-t-primary/30 bg-card/50 backdrop-blur-sm p-5">
    <h3 class="text-sm font-semibold text-foreground mb-3 flex items-center gap-2">
      <svg class="size-4 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"/>
        <path d="M2 12h20"/>
        <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
      </svg>
      {lang === "es" ? "Directorios SEO" : "SEO Directories"}
    </h3>
    <ul class="space-y-2">
      {directories.map((item) => (
        <li>
          <a href={item.url} target="_blank" rel="noopener noreferrer" class="group inline-flex items-center gap-2 text-sm">
            <span class="font-medium text-primary group-hover:text-primary/80 transition-colors">{item.name}</span>
            <span class="text-muted-foreground text-xs">— {item.desc}</span>
            <svg class="size-3 text-muted-foreground/50 group-hover:text-primary transition-colors shrink-0" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M12 6h-6a2 2 0 0 0 -2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-6" />
              <path d="M11 13l9 -9" />
              <path d="M15 4h5v5" />
            </svg>
          </a>
        </li>
      ))}
    </ul>
  </div>
</div>
