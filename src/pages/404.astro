---
import Layout from "@/layouts/Layout.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import { useTranslations, type Lang } from "@/i18n"

const lang: Lang = Astro.request.headers.get("accept-language")?.startsWith("es") ? "es" : "en"
const t = useTranslations(lang)
---

<Layout title={`404 | ${t("404.title")}`} description={t("404.description")} lang={lang}>
  <main id="main-content" class="px-4">
    <SectionContainer class="py-20 md:py-36">
      <div class="text-center">
        <p class="text-7xl font-bold text-primary">404</p>
        <h1 class="mt-4 text-3xl font-bold text-foreground">{t("404.title")}</h1>
        <p class="mt-2 text-muted-foreground">{t("404.description")}</p>
        <a
          href={`/${lang}/`}
          class="inline-flex mt-8 px-6 py-2.5 rounded-lg bg-primary text-primary-foreground text-sm font-medium hover:bg-primary/90 transition"
        >
          {t("404.back")}
        </a>
      </div>
    </SectionContainer>
  </main>
</Layout>
